<%= form_for(@item, html: {multipart: true}) do |f| %>
  <%= f.text_field :title, placeholder: "Title" %><br><br>
  <%= f.text_area :description, placeholder: "Description" %><br><br>
  <%= f.number_field :price, placeholder: "Price" %><br><br>
  <%= f.text_field :location, placeholder: "Location" %><br>
  <%= f.label :image, "Attach an Image" %><br>
  <%= f.file_field :image %><br>
  <%= f.submit "Create Item" %>
<% end %>
