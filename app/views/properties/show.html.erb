<div class='property-header'>
  <h3><%= @property.title %><br></h3>
</div>
<div class='row property-container'>
  <div class='col-md-4 col-md-offset-1 well property-image'>
    <img src=" <%= @property.image_path %>"  /><br><br>
  </div>

  <div class='col-md-5 property-details'>
    <h4>Location: 
      <a href='/location/<%= @property.location.slug %>'>
        <%= @property.location.city %>
      </a>
    </h4>
    <h4>Price Per Guest: <%= number_to_currency(@property.price_per_guest) %></h4><br>
    <h4>Max Occupancy: <%= @property.max_occupancy %> </h4>
    <h4>Business: 
      <a href='/<%= @property.business.slug %>'>
        <%= @property.business.name %>
      </a>
    </h4>
    <h4> Description: </h4>
    <p><%= @property.description %></p><br>
  </div>
</div>

  <div class='jumbotron book-property-form'>
    <div id='property-input' class='row'>
      <%= form_tag("/cart_items", method: "post") do %>
      <%= hidden_field_tag :property_id, @property.id %>
      <p>Guests</p>
      <div id='max_occupancy' class='col-md-2'>
        <%= select_tag :occupancy, options_for_select([*1..@property.max_occupancy]), class: 'form-control'%>
      </div>
      <!-- <%#= f.text_field :starting_date, :class => 'datepicker', placeholder: "Check-In" %>
      <%#= f.text_field :end_date, "data-provide" => 'datepicker' %> -->
    <!-- <div id="dates"> -->
      <div class='col-md-8' id='datepickers'>
        <%= text_field_tag :starting_date, Time.now.strftime("%m/%d/%Y"), id: "datepicker1", readonly: true %>
        <%= text_field_tag :end_date, Time.now.tomorrow.strftime("%m/%d/%Y"), id: "datepicker2", readonly: true %>
      </div>
    </div>
  <!-- </div> -->
    <div id='book-me-btn' >
      <%= submit_tag "Book Me", class: 'btn btn-success' %>
    </div>
    <% end %>
  </div>




