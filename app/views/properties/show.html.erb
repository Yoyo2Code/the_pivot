      <h4><span class="glyphicon glyphicon-map-marker" aria-hidden="true"></span>  Location: <%= @property.location.city %></h4>
        <%= form_tag("/cart_items", method: "post") do %>
        <%= hidden_field_tag :property_id, @property.id %>
        <%= select_tag :occupancy, options_for_select([*1..@property.max_occupancy]) %>
        <!-- <%#= f.text_field :starting_date, :class => 'datepicker', placeholder: "Check-In" %>
        <%#= f.text_field :end_date, "data-provide" => 'datepicker' %> -->
        <!-- <div id="dates"> -->
        <%= text_field_tag :starting_date, Time.now.strftime("%m/%d/%Y"), id: "datepicker1" %>
        <%= text_field_tag :end_date, Time.now.tomorrow.strftime("%m/%d/%Y"), id: "datepicker2" %>
        <!-- </div> -->
        <%= submit_tag "Book Me!" %>
        <% end %><br><br><br><br>
      </div>
    </div>
  </div>
</div>
</div>






