<h1 style="color:white"><%= @property.title %><br></h1>
<img src=" <%= @property.image_path %> " style="width:220px;height:228px;"  /><br><br>

    <div style="background-color:white">
      <h2> Description: </h2>
    <h3><%= @property.description %></h3><br>
    <h4>Price Per Guest: <%= number_to_currency(@property.price_per_guest) %></h4><br>
    <h4>Max Occupancy: <%= @property.max_occupancy %> </h4>
    <h4>Business: <%= @property.business.name %></h4>
    <h4>Location: <%= @property.location.city %></h4>
  </div>

  <%= form_for CartItem.new(@property.id, :occupancy, :starting_date, :end_date) do |f| %>
  <%= f.select :occupancy, options_for_select([*1..@property.max_occupancy]) %>
  <%= f.text_field :starting_date, "data-provide" => 'datepicker' %>
  <%= f.text_field :end_date, "data-provide" => 'datepicker' %>
  <%= f.submit "Book Me" %>
  <% end %>
