<div class="container">
  <div class="row">
    <div class="table-responsive">
      <table class="table table-bordered">
        <thead>
          <tr>
            <td>Order Number</td>
            <td>Date Created</td>
            <td>Status</td>
            <td>Details</td>
          </tr>
        </thead>
        <% @orders.each do |order| %>
        <tbody>
          <tr>
            <td><%= order.id %></td>
            <td><%= order.status %></td>
            <td><%= order.created_at %></td>
            <td><%= link_to "View Order Details", order_path(order) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
